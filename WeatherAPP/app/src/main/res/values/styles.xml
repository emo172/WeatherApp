<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 搜索输入框样式 -->
    <style name="WeatherEditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- 搜索按钮样式 -->
    <style name="WeatherActionButton">
        <item name="android:background">@drawable/btn_search_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 加载指示器样式 -->
    <style name="WeatherProgressBar" parent="Widget.AppCompat.ProgressBar">
        <!-- 继承默认样式，保留原始属性 -->
    </style>

    <!-- 天气卡片样式 -->
    <style name="WeatherCard">
        <item name="cardBackgroundColor">#60FFFFFF</item> <!-- 半透明白色背景 -->
        <item name="cardCornerRadius">16dp</item> <!-- 圆角半径 -->
        <item name="cardElevation">8dp</item> <!-- 阴影高度 -->
    </style>

    <!-- 城市名称文本样式 -->
    <style name="WeatherCityName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 温度文本样式 -->
    <style name="WeatherTemperature">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 天气状况文本样式 -->
    <style name="WeatherCondition">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 天气图标样式 -->
    <style name="WeatherIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- 详情行布局样式 -->
    <style name="WeatherDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 详情图标样式 -->
    <style name="WeatherDetailIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- 详情文本样式 -->
    <style name="WeatherDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 错误信息样式 -->
    <style name="WeatherErrorMessage">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/error_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
